{
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es5",
		"lib": ["es2015", "dom"],
		"outDir": "lib",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"declaration": true,
		"jsx": "react",
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"paths": {
			"react": ["./node_modules/@types/react/index"],
		},
		"typeRoots" : [
			"./node_modules/@types",
		],
		"noImplicitReturns": true,
		"noImplicitThis": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
	],
	"exclude": [
		"node_modules",
		"lib",
		"dist"
	]
}
